<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/s_gray_500"
    android:paddingHorizontal="20dp"
    android:paddingVertical="35dp"
    tools:context=".ui.fragment.BuySellFragment">

    <View
        android:id="@+id/straightLine"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:background="@color/p_white_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_bg_round"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/ksana"
        android:textColor="@color/primary_black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="@string/i_want_to"
        android:textSize="28sp"
        android:textColor="@color/p_white_600"
        app:layout_constraintTop_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toEndOf="@id/straightLine"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/i_want_to"
        android:textSize="28sp"
        android:textColor="@color/p_white_600"
        app:layout_constraintTop_toTopOf="@id/guidelineBottom"
        app:layout_constraintStart_toStartOf="@id/straightLine"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAt80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <View
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@color/orange_E77"
        app:layout_constraintTop_toTopOf="@id/ivPersonSellBuy"
        app:layout_constraintStart_toStartOf="@id/ivPersonSellBuy"
        app:layout_constraintEnd_toEndOf="@id/ivPersonSellBuy"
        app:layout_constraintBottom_toBottomOf="@+id/ivPersonSellBuy"/>

    <Button
        android:theme="@style/Theme.AppCompat.DayNight"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="Sell"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/a_orange_900"
        android:textAllCaps="false"
        android:background="@drawable/button_bg_sell"
        app:layout_constraintEnd_toStartOf="@id/ivPersonSellBuy"
        app:layout_constraintTop_toTopOf="@id/ivPersonSellBuy"
        app:layout_constraintBottom_toBottomOf="@+id/ivPersonSellBuy"
        />

    <ImageView
        android:id="@+id/ivPersonSellBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_sell_buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineAt80"/>

</androidx.constraintlayout.widget.ConstraintLayout>