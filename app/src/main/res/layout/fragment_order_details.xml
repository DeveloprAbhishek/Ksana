<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.buy.OrderDetailsFragment">

    <ImageView
        android:id="@+id/ivOrderProductImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProductDetailBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProductDetailCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_buy_product_detail_cart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProductDetailHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_buy_product_detail_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="-30dp"
        app:cardCornerRadius="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/midGuideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/p_white_500"
            android:paddingHorizontal="13dp"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/tvMaterialGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/nunito_bold"
                android:text="TMT Bar"
                android:textColor="#ABABAB"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Radha Thermex Fe-550 "
                android:textColor="#1E1E1E"
                android:textColorHint="@color/white"
                android:textSize="28sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMaterialGrade" />

            <TextView
                android:id="@+id/tvUnitLengthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Unit Length"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProductTitle" />

            <TextView
                android:id="@+id/tvUnitLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunito_bold"
                android:text="12m"
                android:textColor="#626262"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/tvUnitLengthTitle"
                app:layout_constraintTop_toBottomOf="@id/tvUnitLengthTitle" />

            <TextView
                android:id="@+id/tvDiameterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Diameter"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/tvUnitLengthTitle"
                app:layout_constraintTop_toBottomOf="@id/tvProductTitle" />

            <TextView
                android:id="@+id/tvDiameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunito_bold"
                android:text="8mm"
                android:textColor="#626262"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/tvDiameterTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDiameterTitle" />

            <TextView
                android:id="@+id/tvQuantityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Quantity"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/tvDiameterTitle"
                app:layout_constraintTop_toBottomOf="@id/tvProductTitle" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunito_bold"
                android:text="10 TON"
                android:textColor="#626262"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/tvQuantityTitle"
                app:layout_constraintTop_toBottomOf="@id/tvQuantityTitle" />

            <TextView
                android:id="@+id/tvFacilityAddressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Delivery Address"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUnitLength" />

            <TextView
                android:id="@+id/tvFacilityAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Satra construction, CPT Cluster 5, Haldia Township, Haldia, WestBengal. PIN-725605"
                android:textColor="@color/p_white_900"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvFacilityAddressTitle" />

            <TextView
                android:id="@+id/tvCreditMethodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Payment Method"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFacilityAddress" />

            <TextView
                android:id="@+id/tvCreditMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Card Payment"
                android:textColor="@color/p_white_900"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvCreditMethodTitle" />

            <TextView
                android:id="@+id/tvDeliveryToFacilityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Estimated Delivery"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/tvCreditMethodTitle"
                app:layout_constraintTop_toTopOf="@id/tvCreditMethodTitle" />

            <TextView
                android:id="@+id/tvDeliveryToFacility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunito_bold"
                android:text="20th NOV 2021"
                android:textColor="@color/p_white_900"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/tvDeliveryToFacilityTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDeliveryToFacilityTitle" />

            <TextView
                android:id="@+id/tvProductPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Product Price"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCreditMethod" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="₹25,286"
                android:textColor="@color/p_white_900"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/tvDeliveryToFacilityTitle"
                app:layout_constraintTop_toTopOf="@id/tvProductPriceTitle" />

            <TextView
                android:id="@+id/tvTransactionIDTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Transaction ID :"
                android:textColor="#484848"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProductPriceTitle" />

            <TextView
                android:id="@+id/tvTransactionID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="BGFRT256899451"
                android:textColor="@color/a_orange_500"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/tvDeliveryToFacilityTitle"
                app:layout_constraintTop_toTopOf="@id/tvTransactionIDTitle" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>