<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_black"
    android:paddingHorizontal="15dp"
    android:paddingVertical="30dp"
    tools:context=".ui.fragment.buy.PaymentSuccessfulFragment">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRegisterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/primary_white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvPaymentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Payment Successful"
        android:textColor="@color/primary_white"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRegisterLabel" />

    <TextView
        android:id="@+id/tvSubLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Your order will be delivered to you on time"
        android:textColor="@color/p_white_800"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentLabel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <ImageView
        android:id="@+id/ivPaymentSuccessLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_payment_success"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal1" />


    <TextView
        android:id="@+id/tvDeliveryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Estimated delivery 2nd NOV 2021"
        android:textColor="@color/p_white_500"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontalAt6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalAt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingVertical="14dp"
        android:gravity="center"
        android:fontFamily="@font/nunito_bold"
        android:theme="@style/Theme.MaterialComponents"
        android:text="Done"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontalAt6"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOrderDetails"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Order Details"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/primary_white"
        app:cornerRadius="12dp"
        app:strokeColor="@color/p_white_500"
        app:strokeWidth="2dp"
        android:backgroundTint="@color/s_gray_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>