<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_gray"
    tools:context=".ui.fragment.sell.SellMenuFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSellCartProductImage"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/cvSellCartProductImage"
        app:layout_constraintLeft_toRightOf="@id/cvSellCartProductImage"
        app:layout_constraintTop_toTopOf="@id/cvSellCartProductImage">

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:text="Debarpan Jana"
            android:textColor="@color/primary_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProfileMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Material Grade"
            android:textColor="@color/primary_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvProfileVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Verified"
            android:textColor="@color/primary_white"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvEditDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/edit_detail"
        android:drawablePadding="5dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Edit Detail"
        android:textColor="@color/a_orange_100"
        android:textSize="8sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <ImageView
        android:id="@+id/ivProfileLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_line"
        app:layout_constraintTop_toBottomOf="@id/tvEditDetail" />

    <ImageView
        android:id="@+id/ivDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/dashboard"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivProfileLine" />

    <ImageView
        android:id="@+id/ivInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/inventory"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivDashboard" />

    <ImageView
        android:id="@+id/ivTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/transaction"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivInventory" />

    <ImageView
        android:id="@+id/ivCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/category"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivTransaction" />

    <ImageView
        android:id="@+id/ivOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/offers"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivCategory" />

    <ImageView
        android:id="@+id/ivNearByFacilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/near_by_facilities"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivOffers" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivNearByFacilities" />

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/setting"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivProfile" />

    <ImageView
        android:id="@+id/ivHelpDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/help_desk"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivSetting" />

    <ImageView
        android:id="@+id/ivLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/log_out"
        app:layout_constraintLeft_toLeftOf="@id/ivProfileLine"
        app:layout_constraintTop_toBottomOf="@id/ivHelpDesk" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGoToSell"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/buy_menu_fragment_buy_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/clGoToBuy">

        <TextView
            android:id="@+id/btnGoToSell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Sell"
            android:textColor="@color/s_gray_500"
            android:textSize="18sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGoToBuy"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/buy_menu_fragment_sell_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/clGoToSell"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/btnGoToBuy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Buy"
            android:textColor="@color/s_gray_500"
            android:textSize="18sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>