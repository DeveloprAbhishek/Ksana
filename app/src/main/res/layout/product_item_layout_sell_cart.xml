<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginTop="25dp"
    app:cardCornerRadius="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_white_600">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSellCartProductImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/cvSellCartProductImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvSellCartProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Product Title"
                android:textColor="@color/s_gray_400"
                android:textColorHint="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvSellCartMaterialGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Material Grade"
                android:textColor="@color/s_gray_400"
                android:textColorHint="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSellCartUnitLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Unit Length"
                android:textColor="@color/s_gray_400"
                android:textColorHint="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSellCartDiameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Diameter"
                android:textColor="@color/s_gray_400"
                android:textColorHint="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSellCartQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Quantity"
                android:textColor="@color/s_gray_400"
                android:textColorHint="@color/white"
                android:textSize="8sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>